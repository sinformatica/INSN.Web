@model LoginDtoRequest

@{
    ViewBag.Title = "Inicio de Sesion";
}

<form method="post">
    <div class="row text-center mb-5">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
        <h3>Iniciar sesión</h3>
    </div>
    <div class="row">
        <div class="mb-3">
            <label asp-for="Usuario" class="form-label">Usuario</label>
            <input asp-for="Usuario" class="form-control" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Usuario" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" aria-required="true" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="row justify-content-between">
            <div class="col">
                <a href="#" class="link-danger">Olvidé clave</a>
            </div>
            <div class="col offset-5">
                <a asp-controller="User" asp-action="Register" class="link-dark">Registrarme</a>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <button type="submit" class="w-25 btn btn-lg btn-primary">Ingresar</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}