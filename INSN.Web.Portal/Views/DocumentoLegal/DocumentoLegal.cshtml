@using INSN.Web.ViewModels.Home

@model DocumentoLegalViewModel

@{
    ViewData["Title"] = "INSN Breña";
}

<main id="main">
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">
            <div class="section-header">
                <h2>Directorio Institucional</h2>               
            </div>
            <form>
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Documento, new { @class = "form-label"})
                            @Html.TextBoxFor(m => m.Documento, new { @class = "form-control"})
                        </div>
                    </div>
                    <div class="col-3">
                        @Html.LabelFor(m => m.TipoDocumentoSeleccionada, new { @class = "form-label"})
                        @Html.DropDownListFor(m => m.TipoDocumentoSeleccionada,
                        new SelectList(Model.TipoDocumentos, "Id", "Descripcion"), "Todos", new { @class = "form-select"})
                    </div>
                    <div class="col-3">
                        @Html.LabelFor(m => m.EstadoSeleccionado, new { @class = "form-label"})
                        @Html.DropDownListFor(m => m.EstadoSeleccionado,
                        new SelectList(Model.Estados, "Codigo", "Nombre"), "Todos", new { @class = "form-select"})
                    </div>
                </div>
                <div class="row mt-3 justify-content-end">
                    <div class="col-auto">
                        <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search me-1"></i>Buscar</button>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-outline-primary" type="reset"><i class="bi bi-eraser-fill me-1"></i>Limpiar</button>
                    </div>
                  
                </div>
                <div class="row">
                    <div>
                        Mostrar
                        <select id="pageSize" class="form-select-sm" asp-for="Rows">
                            <option>5</option>
                            <option>10</option>
                            <option>15</option>
                            <option>20</option>
                            <option>50</option>
                        </select>
                        registros
                    </div>
                </div>
                <div class="row mt-4">
                    @if (Model.DocumentoLegales is null)
                    {
                        <p>Sin resultados</p>
                    }
                    else if (!Model.DocumentoLegales.Any())
                    {
                        <p>Sin datos para mostrar</p>
                    }
                    else
                    {
                        <table class="table table-striped table-vcenter">
                            <thead>
                                <tr class="table-primary">
                           
                                    <th>Documento</th>
                                    <th>PDF</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DocumentoLegales)
                                {
                                    <tr>
                                      
                                        <td>
                                            @item.Documento
                                            <br>
                                            @item.Descripcion
                                        </td>     
                                         <td>@item.TipoDocumento</td>                                      
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                <div class="container">
                    <partial name="_DataPager" model="ViewBag.Pager" />
                    @Html.HiddenFor(m => m.Page, new { id = "currentPage"})
                </div>        
            
            </form>
        </div>
    </section>
    
</main>


@section Scripts
    {
    <script>
        function setCurrentPage(data) {
            let hiddenValue = document.getElementById('currentPage');
            hiddenValue.value = data;
            console.log(data);
        }

        function setPreviousPage(data) {
            let totalPages = @ViewBag.Pager.TotalPages;
            if (data <= totalPages) {
                data--;
                if (data === 0) {
                    data = 1;
                }

                setCurrentPage(data);
            }
        }

        function setNextPage(data) {
            let totalPages = @ViewBag.Pager.TotalPages;
            if (data < totalPages) {
                data++;
                setCurrentPage(data);
            }
        }
    </script>
}
