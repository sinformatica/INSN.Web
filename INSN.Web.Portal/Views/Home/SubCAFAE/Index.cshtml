                            <option>50</option>
                            <option>100</option>
                        </select>
                        registros
                    </div>
                </div>
                <div class="row mt-4">
                    @if (Model.DocumentoLegales is null)
                    {
                        <p>Sin resultados</p>
                    }
                    else if (!Model.DocumentoLegales.Any())
                    {
                        <p>Sin datos para mostrar</p>
                    }
                    else
                    {
                        <table class="table table-striped table-vcenter">
                            <thead>
                                <tr>
                                    <th class="col-10">Descripción del Documento</th>
                                    <th class="col-2 d-none d-sm-table-cell">Documento PDF</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DocumentoLegales)
                                {
                                    <tr>
                                        <td class="col-10">
                                            <h5 class="fw-bold">@item.Documento</h5>
                                            <br>
                                            @item.Descripcion
                                        </td>
                                        <td class="col-2 d-none d-sm-table-cell">
                                            <a target="_blank" href="@Url.Action("Download1", "DirectorioInstitucional", new { fileName = item.PDF })">
                                                <img src="~/imagenes/iconos/pdf.svg" alt="Icono PDF" width="32" height="32">
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>


                <div class="container">
                    <partial name="_DataPager" model="ViewBag.Pager" />
                    @Html.HiddenFor(m => m.Page, new { id = "currentPage" })
                </div>
            </div>
        </section>
