            <div class="modal fade" id="noticia_@i" tabindex="-1" role="dialog" aria-labelledby="noticia_@i" aria-hidden="true">
                <div class="modal-dialog modal-dialog-fromleft" role="document">
                    <div class="modal-content">
                        <div class="block block-rounded shadow-none mb-0">
                            <div class="container block-content block-fondo" data-aos="fade-up" style="padding: 30px;">
                                <div class="section-header">
                                    <h2>Noticias</h2>
                                </div>
                                <div class="row gy-4">
                                    <h5 style="text-align: center;text-transform: uppercase;">
                                        @item.Titulo
                                    </h5>
                                    <div class="col-lg-6">
                                        <!-- Inicio de Portafolio -->
                                        <div class="row gy-4 portfolio-container">
                                            @* INICIO Foto que se Mostrara *@
                                            <div class="portfolio-item filter-app">
                                                <div class="portfolio-wrap">
                                                    @{
                                                        var base64 = Convert.ToBase64String(item.ImagenBytes ?? Array.Empty<byte>());
                                                        var imagenDataUrl = string.Format("data:image/" + @item.Extension + ";base64,{0}", base64);
                                                    }
                                                    <a href="@imagenDataUrl" data-gallery="portfolio_noticia_@i" class="glightbox">
                                                        <img src="@imagenDataUrl"
                                                             class="img-fluid" alt="">
                                                    </a>

                                                </div>
                                            </div>
                                            @* FIN Foto que se Mostrara *@
                                            @* INICIO Fotos Ocultas *@
                                            <div hidden>
                                                @if (item != null && item.DetalleLista != null)
                                                {
                                                    @foreach (var det in item.DetalleLista)
                                                    {
                                                        <div class="portfolio-wrap">
                                                            @{
                                                                base64 = Convert.ToBase64String(det.ImagenBytes ?? Array.Empty<byte>());
                                                                imagenDataUrl = string.Format("data:image/" + @det.Extension + ";base64,{0}", base64);
                                                            }
                                                            <a href="@imagenDataUrl" data-gallery="portfolio_noticia_@i" class="glightbox">
                                                                <img src="@imagenDataUrl"
                                                                     class="img-fluid" alt="">
                                                            </a>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                            @* FIN Fotos Ocultas *@
                                        </div>
                                        <!-- Fin de Portafolio -->
                                        <p>
                                            <strong>
                                                @(item?.CodigoFecha ?? string.Empty)
                                            </strong>
                                        </p>
                                        <p style="text-align: justify;">
                                            @Html.Raw(item?.Parrafo1?.Replace("\n", "<br />") ?? string.Empty)
                                        </p>
                                    </div>
                                    @*  Columna 2 *@
                                    <div class="col-lg-6">
                                        <p style="text-align: justify;">
                                            @Html.Raw(item?.Parrafo2?.Replace("\n", "<br />") ?? string.Empty)
                                        </p>
                                        <p style="text-align: right;">
                                            @(item?.Fecha.ToString("dd/MM/yyyy") ?? string.Empty)
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="block-content block-content-full block-content-sm block-fondo text-end border-top">
                                <button type="button" class="btn btn-alt-insn" data-bs-dismiss="modal">
                                    Cerrar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            i++;
        }
    }
}
<!-- FIN MODAL - NOTICIAS -->

<!-- INICIO MODAL - COMUNICADOS -->
@if (Model is not null)
{
    if (Model != null && Model.ComunicadoLista != null && Model.ComunicadoLista.Any())
    {
        int i = 1;

        @foreach (var item in Model.ComunicadoLista)
        {
            <div id="comunicado_@i" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-dialog-fromleft modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="swiper-container swiper-gallery" style="max-width: @item.Ancho px;">
                                <div class="swiper-wrapper">
                                    <!-- Inicio mostrar primero la imagen de la portada -->
                                    <div class="swiper-slide">
                                        @{
                                            var base64 = Convert.ToBase64String(item.ImagenBytes ?? Array.Empty<byte>());
                                            var imagenDataUrl = string.Format("data:image/" + @item.Extension + ";base64,{0}", base64);
                                        }
                                        <img src="@imagenDataUrl">
                                    </div>
                                    <!-- Fin mostrar primero la imagen de la portada -->
                                    <!-- Inicio imagénes adicionales -->
                                    @if (item != null && item.DetalleLista != null)
                                    {
                                        @foreach (var det in item.DetalleLista)
                                        {
                                            <div class="swiper-slide">
                                                @{
                                                    base64 = Convert.ToBase64String(det.ImagenBytes ?? Array.Empty<byte>());
                                                    imagenDataUrl = string.Format("data:image/" + @det.Extension + ";base64,{0}", base64);
                                                }
                                                <img src="@imagenDataUrl">
                                            </div>
                                        }
                                    }
                                    <!-- Inicio imagénes adicionales -->
                                </div>
                                <div class="swiper-button-next"></div>
                                <div class="swiper-button-prev"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            i++;
        }
    }
}
