                <div class="slides-3 swiper" data-aos="fade-up" data-aos-delay="100">
                    <div class="swiper-wrapper">
                        @if (Model is null)
                        {
                            <p>Sin resultados</p>
                        }
                        else if (!(Model.ComunicadoLista?.Any() ?? false))
                        {
                            <p>Sin datos para mostrar</p>
                        }
                        else
                        {
                            int i = 1;

                            @foreach (var item in Model.ComunicadoLista)
                            {
                                @if (item != null)
                                {
                                    <div class="swiper-slide">
                                        <div class="testimonial-wrap">
                                            <div class="testimonial-item">
                                                <div class="d-flex align-items-center">
                                                    <div style="text-align: center; width: 100%;">
                                                        @{
                                                            var base64 = Convert.ToBase64String(item.ImagenBytes ?? Array.Empty<byte>());
                                                            var imagenDataUrl = string.Format("data:image/" + @item.Extension + ";base64,{0}", base64);
                                                          }

                                                        <img src="@imagenDataUrl" style="height: 300px; /* Altura definida * /" class="testimonial-img flex-shrink-0" alt="">
                                                    </div>
                                                </div>
                                                <br>
                                                <h4>@item.FechaPublicacion.ToString("dd/MM/yyyy")</h4>
                                                <p>
                                                    @item.Titulo
                                                </p>
                                                <a data-bs-toggle="modal" data-bs-target="#comunicado_@i" class="readmore stretched-link" style="cursor: pointer;"></a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                i++;
                            }
                        }
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </section>
