        <section id="Noticias" class="testimonials">
            <div class="container" data-aos="fade-up">
                <br />
                <div class="section-header">
                    <h2>Noticias</h2>
                </div>
                <div class="slides-3 swiper" data-aos="fade-up" data-aos-delay="100">
                    <div class="swiper-wrapper">
                        @if (Model is null)
                        {
                            <p>Sin resultados</p>
                        }
                        else if (!(Model.NoticiaLista?.Any() ?? false))
                        {
                            <p>Sin datos para mostrar</p>
                        }
                        else
                        {
                            int i = 1;

                            @foreach (var item in Model.NoticiaLista)
                            {
                                @if (item != null)
                                {
                                    <div class="swiper-slide">
                                        <div class="testimonial-wrap">
                                            <div class="testimonial-item">
                                                <div class="d-flex align-items-center">
                                                    <div style="text-align: center; width: 100%;">
                                                        @{
                                                            var base64 = Convert.ToBase64String(item.ImagenBytes ?? Array.Empty<byte>());
                                                            var imagenDataUrl = string.Format("data:image/" + @item.Extension + ";base64,{0}", base64);
                                                        }

                                                        <img src="@imagenDataUrl" class="testimonial-img flex-shrink-0" alt="">
                                                    </div>
                                                </div>
                                                <br>
                                                <h4>@item.Fecha.ToString("dd/MM/yyyy")</h4>
                                                <p>
                                                    @if (!string.IsNullOrEmpty(item.Parrafo1))
                                                    {
                                                        @(item.Parrafo1.Substring(0, Math.Min(120, item.Parrafo1.Length)) + "...")
                                                    }
                                                    else if (!string.IsNullOrEmpty(item.Parrafo2))
                                                    {
                                                        @(item.Parrafo2.Substring(0, Math.Min(120, item.Parrafo2.Length)) + "...")
                                                    }
                                                </p>
                                                <br />
                                                <br />
                                                <a href="#" data-bs-toggle="modal" data-bs-target="#noticia_@i" class="readmore stretched-link">Leer Más <i class="bi bi-arrow-right"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                i++;
                            }
                        }
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </section>
        <!-- ======= FIN NOTICIAS  ======= -->
